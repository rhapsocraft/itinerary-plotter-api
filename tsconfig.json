{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
